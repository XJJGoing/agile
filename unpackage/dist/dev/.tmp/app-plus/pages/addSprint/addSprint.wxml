<scroll-view class="all" scroll-y="true"><view class="hadSprint"><view class="titleView"><text class="title">现有冲刺:</text></view><block wx:if="{{nowHadSprint.length!=0}}"><block><block wx:for="{{nowHadSprint}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="sprintNum"><uni-card vue-id="{{'1-'+index}}" title="{{item.sprintName}}" bind:__l="__l" vue-slots="{{['default']}}"><view class="sprintDetail"><text id="target">{{"目标:"+item.sprintTarget}}</text><text id="startTime">{{"启动时间:"+item.startTime}}</text><text id="endTime">{{"截止时间:"+item.endTime}}</text></view></uni-card></view></block></block></block><block wx:else><block><view>该项目下暂无冲刺</view></block></block></view><view class="sprintMessage"><view class="titleView"><text class="title">添加冲刺:</text></view><view><text>冲刺序号:</text><input style="{{'width:'+(width+'px')+';'}}" placeholder="请填入冲刺号(格式:冲刺1 冲刺2等)" data-event-opts="{{[['input',[['addSprintName',['$event']]]]]}}" bindinput="__e"/></view><view><text>冲刺目标:</text><input style="{{'width:'+(width+'px')+';'}}" placeholder="请填入冲刺的目标(20个字以内)" data-event-opts="{{[['input',[['addSprintTarget',['$event']]]]]}}" bindinput="__e"/></view><view><text>启动时间:</text><input style="{{'width:'+(width+'px')+';'}}" placeholder="点击选择冲刺启动时间" data-event-opts="{{[['tap',[['openStartTimePicker',['$event']]]]]}}" value="{{startTime}}" bindtap="__e"/></view><view><text>截止时间:</text><input style="{{'width:'+(width+'px')+';'}}" placeholder="点击选择冲刺截止时间" data-event-opts="{{[['tap',[['openEndTimePicker',['$event']]]]]}}" value="{{endTime}}" bindtap="__e"/></view><button data-event-opts="{{[['tap',[['addSprint',['$event']]]]]}}" class="submitButton" bindtap="__e">提交</button></view><view><w-picker class="vue-ref" vue-id="2" mode="dateTime" startYear="2019" endYear="2030" current="{{true}}" data-ref="picker1" data-event-opts="{{[['^confirm',[['onConfirm1']]]]}}" bind:confirm="__e" bind:__l="__l"></w-picker></view><view><w-picker class="vue-ref" vue-id="3" mode="dateTime" startYear="2019" endYear="2030" current="{{true}}" data-ref="picker2" data-event-opts="{{[['^confirm',[['onConfirm2']]]]}}" bind:confirm="__e" bind:__l="__l"></w-picker></view></scroll-view>