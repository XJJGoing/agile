::-webkit-scrollbar {
  width: 6rpx;
  height: 4rpx;
  border-radius: 10rpx;
}
/*定义滚动条轨道 内阴影+圆角*/
::-webkit-scrollbar-track {
  -webkit-box-shadow: inset 0 0 10rpx rgba(0, 0, 0, 0.3);
  box-shadow: inset 0 0 6rpx rgba(0, 0, 0, 0.1);
  border-radius: 10px;
}
/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb {
  border-radius: 10px;
  -webkit-box-shadow: inset 0 0 10rpx rgba(0, 0, 0, 0.3);
  box-shadow: inset 0 0 6rpx rgba(0, 0, 0, 0.1);
  background-color:#C8C7CC;
}


