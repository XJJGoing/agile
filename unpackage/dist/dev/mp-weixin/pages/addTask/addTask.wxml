<scroll-view class="all" scroll-y="true"><view class="addTask"><text id="title">新增任务:</text><view><text id="heading">标识号:</text><input style="{{'width:'+(inputWidth+'px')+';'}}" placeholder="真实姓的首字母大写(仅限一个)" data-event-opts="{{[['input',[['inputTaskOrder',['$event']]]]]}}" value="{{taskOrder}}" bindinput="__e"/></view><view><text id="heading">任务内容:</text><input style="{{'width:'+(inputWidth+'px')+';'}}" placeholder="请输入任务的内容(20个字以内)" data-event-opts="{{[['input',[['inputTaskName',['$event']]]]]}}" bindinput="__e"/></view><view><text id="heading">优先级:</text><picker range="{{priority}}" value="{{index}}" data-event-opts="{{[['change',[['pickerPriorityChange',['$event']]]]]}}" bindchange="__e"><input style="{{'width:'+(inputWidth+'px')+';'}}" placeholder="点击选择" disabled="true" value="{{taskPriority}}"/></picker></view><view><text id="heading">预估工时</text><input style="{{'width:'+(inputWidth+'px')+';'}}" placeholder="请输入预估工时(单位为小时)" data-event-opts="{{[['input',[['inputTaskPredictTime',['$event']]]]]}}" value="{{taskPredictTime}}" bindinput="__e"/></view><view><text id="heading">专业</text><input style="{{'width:'+(inputWidth+'px')+';'}}" disabled="true" value="{{departmentName}}"/></view><view><text id="heading">执行人</text><input style="{{'width:'+(inputWidth+'px')+';'}}" disabled="true" value="{{userInfo.trueName}}"/></view><view><text id="heading">负责人</text><input style="{{'width:'+(inputWidth+'px')+';'}}" disabled="true" value="{{taskChargeUserName}}"/></view><button class="submit" type="default" data-event-opts="{{[['tap',[['submitAddTask',['$event']]]]]}}" bindtap="__e">提交</button></view></scroll-view>