<scroll-view class="comment" scroll-y="true"><view class="commentDetail"><view class="addComment"><view class="content"><text>评论内容:</text><input style="{{'width:'+(width+'px')+';'}}" placeholder="添加评论内容(最多少于30字)" data-event-opts="{{[['input',[['inputContent',['$event']]]]]}}" value="{{content}}" bindinput="__e"/></view><button data-event-opts="{{[['tap',[['addComment',['$event']]]]]}}" bindtap="__e">增加评论</button></view><block wx:for="{{allComment}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="eachDetail"><uni-card class="commentCard" vue-id="{{'1-'+index}}" title="{{item.trueName}}" thumbnail="{{item.avatarUrl}}" note="{{'评论时间:'+item.createTime}}" bind:__l="__l" vue-slots="{{['default']}}"><text id="content">{{item.content}}</text></uni-card></view></block></view></scroll-view>